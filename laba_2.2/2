import turtle as tr

num=[[(0, 0)] for i in range(10)]

num[0] = [(2, 90), (1, 90), (2, 90), (1, 0)]
num[1] = [(2, 180), (2, -135), (1.41, 180), (1.41, 45)]
num[2] = [(1, 45), (1.41, -135), (1, 180), (1, 135), (1.41, -45), (1, -90), (1, 180), (1, 0)]
num[3] = [(0, 45), (1.41, -135), (1, 135), (1.41, 180), (1.41, -135), (1, 135), (1.41, -135), (1, 180), (1, 0)]
num[4] = [(2, 180), (1, -90), (1, 90), (1, 180), (1, -90), (1, -90), (1, 90)]
num[5] = [(0, 90), (1, -90), (1, -90), (1, 90), (1, 90), (1, 180), (1, -90), (1, -90), (1, 90), (1, 90), (1, 0)]
num[6] = [(0, 45), (1.41, -45), (1, -90), (1, -90), (1, -90), (1, 135), (1.41, 45)]
num[7] = [(0, 45), (1.41, -45), (1, 180), (1, 45), (1.41, -135),(1, 180), (1, 0)]
num[8] = [(2, 90), (1, 90), (2, 90), (1, 90), (1, 90), (1, 90), (1, 90), (1,0)]
num[9] = [(1, 45), (1.41, 180), (1.41, -135), (1, 90), (1, 90), (1, 0)]

def num_draw(A):
	for step, rot in num[A]:
		tr.forward(step * 50)
		tr.right(rot)

def index_draw(index):
	for el in index:
		num_draw(int(el))
		tr.penup()
		tr.forward(75)
		tr.right(90)
		tr.pendown()

tr.left(180)
tr.penup()
tr.forward(300)
tr.pendown()
tr.left(90)
index_draw('141700')